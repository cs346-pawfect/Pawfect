<!DOCTYPE html>
<html>
<head>

  <!-- title (name of pet) -->
  <title><%= petname %></title>

  <!-- Bootstrap link -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">

  <!-- font link (awesome cdn) -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <!-- style.css file link  -->
  <link rel="stylesheet" href="../css/pet_style.css">

</head>
<body>


  <!-- header section starts  -->


  <header class="header">

    <!-- logo -->
    <a href="#" class="logo"> <i class="fas fa-paw"></i> Pawfect </a>

    <!-- navbar -->
    <nav class="navbar">
        <a href="#home" class="navbar-home-btn">Home</a>
        <a href="#about" class="navbar-about-btn">About</a>
        <a href="#pets" class="navbar-pets-btn">Pets</a>
        <a href="#footer" class="navbar-contact-btn">Contact</a>
    </nav>

    <!-- navbar buttons (login button)-->
    <div class="navbar-buttons">
        <div id="menu-btn" class="fas fa-bars"></div>

        
        <% if ( !isAuth) { %>
          <!-- if the user did not log in (Not authorized) 
                display the Login button -->
          <a href="/login"><button id="login-btn" value="login">Login</button></a>

        <% } else { %>
          <!-- if the user logged in (Authorized)
               change the login button to the profile button -->
          <a href="#" class="logo"> <i class="fas fa-user"></i> </a>
        <%} %>

    </div>

  </header>



  <!-- header section ends  -->



  <!-- pet-information section starts  -->


  <section class="pet-information ">

    <!-- display the pet image  -->
    <div class="image">

        <% switch (imgNum) {
            case "1":
          %>
              <img src="../img/info-black-cat.png" alt="Image 1">
          <% break;
            case "2":
          %>
              <img src="../img/info-three-cats.png" alt="Image 2">
          <% break;
            case "3":
          %>
              <img src="../img/info-rabbit.png" alt="Image 3">
          <% break;
            case "4":
          %>
              <img src="../img/info-dog.png" alt="Image 4">
          <% break;
            default:
          %>
              <p>No image found.</p>
          <% break;
          } %>
    </div>
    
    <!-- pet information -->
    <div class="content">
      
      <!-- pet name -->
      <h3 class="title"><%= petname %></h3>
      
      <!-- date and location -->
      <div class="date-location">
        <i class="fas fa-calendar-days date"> <span><%= date %></span></i>
        <i class="fas fa-location-dot location"><span> <%= location %></span></i>
      </div>

      <!-- table of information  -->
      <div class="tablediv">
        
        <table class="table">
          
          <thead>
            <tr>
              <th scope="col">Details</th>
              <th scope="col"></th>
            </tr>
          </thead>
          
          <tbody>
            <tr>
              <th scope="row">Type:</th>
              <td><%= type %></td>
            </tr>

            <tr>
              <th scope="row">Age:</th>
              <td><%= age %></td>
            </tr>

            <tr>
              <th scope="row">Have passport:</th>
              <td><%= passport %></td>
            </tr>
          
          </tbody>
        
        </table>
        
        <!-- owner -->
        <div class="Owner">
          <i class="fas fa-user logo"></i> <span><%= owner %></span>
          <a class="btn contact-btn" href="tel:1234567890">
            <ion-icon name="logo-whatsapp" class="whats"></ion-icon> Contact me </a>
        </div>
      
      </div>
    
    </div> 
  
  </section>
  
  
  <!-- pet-information section ends -->



  <!-- footer section starts  -->


  <section class="footer" id="footer" style="background-image: url('../img/footer-bg.jpg')">
        
    <div class="footer-top">
        
        <div class="container">
            
        <!-- footer - left -->
        <div class="footer-left">
            
            <!-- about the website -->
            <div class="footer-company-about">
                
                <h3> <i class="fas fa-paw"></i> Pawfect</h3>
                <p>
                    <strong>Pawfect</strong> This site has been created as a requirement for the (CS-346) Web application
                    development Course at Imam Muhammad Bin Saud Islamic University.
                </p>
            
            </div>
            
            <!-- social media icons -->
            <div class="social-icons-container">
                <a href="#"><ion-icon name="logo-facebook"></ion-icon></a>
                <a href="#"><ion-icon name="logo-instagram"></ion-icon></a>
                <a href="#"><ion-icon name="logo-linkedin"></ion-icon></a>
                <a href="#"><ion-icon name="logo-twitter"></ion-icon></a>
                <a href="#"><ion-icon name="logo-youtube"></ion-icon></a>
            </div>
        
        </div>
    
        <!-- footer - center -->
        <div class="footer-center">
            
            <a href="#" class="footer-links">About Us</a>
            <a href="#" class="footer-links">Contact Us</a>
            <a href="#" class="footer-links">Privacy Policy</a>
            <a href="#" class="footer-links">Terms of Service</a>
            <a href="#" class="footer-links">Pet Adoption</a>
            <a href="#" class="footer-links">FAQs</a>

        </div>

        <!-- footer - right -->
        <div class="footer-right">

            <div class="contact-info">
                <i class="fa fa-location-dot">  </i>
                <span>Saudi Arabia - Riyadh</span>
            </div>
            
            <div class="contact-info">
                <i class="fa fa-phone"> </i>
                <span>+966 555555555</span>
            </div>
            
            <div class="contact-info">
                <i class="fa fa-envelope"> </i>
                <span><a href="mailto:support@gmail.com">support@gmail.com</a></span>
            </div>
        
        </div>
      
      </div>
      
      <!-- copyright sentence -->
      <div class="footer-bottom">
        
        <div class="container">
          <p class="copyright">&copy; 2023 Made with â™¥ by Abeer, Mudhi, Nouf, Razan</p>
        </div>
      
      </div>
    
    </section>


    <!-- footer section ends -->



    <!-- custom js file link  -->

    <!-- for icons -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>


</body>

</html>